<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/frxs_gray_dark"
        android:padding="@dimen/spacing_small">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

        <TextView
            android:id="@+id/tv_order_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_qty"
            android:layout_marginLeft="@dimen/spacing_large"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/start_order_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/spacing_small"
        android:paddingLeft="@dimen/spacing_small"
        android:paddingRight="@dimen/spacing_small">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="单号：2016235659897" />

            <TextView
                android:id="@+id/tv_vendor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="0000110-湖南旺盛酒业贸易有限公司" />

            <TextView
                android:id="@+id/tv_recieve_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实收：100份" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/spacing_small"
            android:paddingRight="@dimen/spacing_small"
            android:src="@drawable/selector_detalis_view" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_print_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打印"
        android:textColor="@color/frxs_white"
        android:background="@drawable/selector_capsule_btn"
        android:paddingTop="@dimen/spacing_small"
        android:paddingBottom="@dimen/spacing_small"
        android:paddingLeft="@dimen/spacing_huge"
        android:paddingRight="@dimen/spacing_huge"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_small"/>
</LinearLayout>